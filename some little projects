        "from datetime import date\n",
        "\n",
        "def list_years(dates: list):\n",
        "\n",
        "    years = []\n",
        "    for date_obj in dates:\n",
        "        year = date_obj.year\n",
        "        if year not in years:\n",
        "            years.append(year)\n",
        "    years.sort()\n",
        "    return years\n",
        "\n",
        "date1 = date(2019, 2, 3)\n",
        "date2 = date(2006, 10, 10)\n",
        "date3 = date(1993, 5, 9)\n",
        "\n",
        "years = list_years([date1, date2, date3])\n",
        "print(years)"
