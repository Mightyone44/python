        "def count_matching_elements(my_matrix, element):\n",
        "    count = 0  # Initialize a counter\n",
        "    for row in my_matrix:\n",
        "        for item in row:\n",
        "            if item == element:\n",
        "                count += 1\n",
        "    return count\n",
        "\n",
        "m = [[1, 2, 1], [0, 3, 4], [1, 0, 0]]\n",
        "print(count_matching_elements(m, 1))\n"
      ],
