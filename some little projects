        "def all_the_longest(strings):\n",
        "    if not strings:\n",
        "        return []\n",
        "    max_length = max(len(s) for s in strings)\n",
        "    return [s for s in strings if len(s) == max_length]\n",
        "\n",
        "\n",
        "result = all_the_longest([\"apple\", \"banana\", \"pear\", \"grapefruit\", \"peach\"])\n",
        "print(result)\n"
      ],
