      "source": [
        "def longest(list):\n",
        "  piv=\"\"\n",
        "  for i in range(len(list)):\n",
        "    if len(list[i])>len(piv):\n",
        "      piv=list[i]\n",
        "  return piv\n",
        "ez = [\"hi\", \"hiya\", \"hello\", \"howdydoody\", \"hi there\"]\n",
        "word = longest(ez)\n",
        "print(word)"
      ],
