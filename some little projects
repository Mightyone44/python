        "def ortalama(liste):\n",
        "    if not liste:\n",
        "        return 0\n",
        "    return sum(liste) / len(liste)\n",
        "\n",
        "# Excel dosyasını oku\n",
        "df = pd.read_excel(\"/content/drive/MyDrive/Colab Notebooks/grades.xlsx\", header=None)\n",
