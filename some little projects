    {
      "source": [
        "class Node:\n",
        "    def __init__(self, value, left_child:'Node' = None, right_child:'Node' = None):\n",
        "        self.value = value\n",
        "        self.left_child = left_child\n",
        "        self.right_child = right_child\n",
        "\n",
        "def greatest_node(root: Node):\n",
        "    \"\"\"\n",
        "    Finds the node with the greatest value in a binary tree.\n",
        "\n",
        "    Args:\n",
        "        root: The root node of the binary tree.\n",
        "\n",
        "    Returns:\n",
        "        The value of the node with the greatest value.\n",
        "    \"\"\"\n",
        "    if root is None:\n",
        "        return float('-inf')  # Return negative infinity if the tree is empty\n",
        "\n",
        "    greatest = root.value  # Initialize with the root value\n",
        "\n",
        "    # Recursively check left and right subtrees\n",
        "    left_greatest = greatest_node(root.left_child)\n",
        "    right_greatest = greatest_node(root.right_child)\n",
        "\n",
        "    # Update greatest if a larger value is found\n",
        "    greatest = max(greatest, left_greatest, right_greatest)\n",
        "\n",
        "    return greatest"
      ],
      "cell_type": "code",
      "metadata": {
        "id": "N4gZVajFLNKF"
      },
      "execution_count": null,
      "outputs": []
    },
    {
      "source": [
        "class Employee:\n",
        "    def __init__(self, name: str):\n",
        "        self.name = name\n",
        "        self.subordinates = []\n",
        "\n",
        "    def add_subordinate(self, employee: 'Employee'):\n",
        "        self.subordinates.append(employee)\n",
        "\n",
        "def count_subordinates(employee: Employee):\n",
        "    \"\"\"\n",
        "    Recursively counts the number of subordinates for an employee.\n",
        "\n",
        "    Args:\n",
        "        employee: The employee object.\n",
        "\n",
        "    Returns:\n",
        "        The total number of subordinates.\n",
        "    \"\"\"\n",
        "    count = len(employee.subordinates)  # Start with direct subordinates\n",
        "\n",
        "    # Recursively count subordinates of subordinates\n",
        "    for subordinate in employee.subordinates:\n",
        "        count += count_subordinates(subordinate)\n",
        "\n",
        "    return count"
      ],
